<Window x:Class="WorkshopTracker.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Workshop Tracker Login"
        Height="235"
        Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Teal header -->
        <Border Grid.Row="0" Background="#FF00AAA8" Padding="10">
            <TextBlock Text="Workshop Tracker Login"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Border>

        <!-- Body -->
        <Border Grid.Row="1" Padding="20" Margin="0,0,0,33">
            <Grid Margin="0,0,0,-42">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Username -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Username:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Margin="67,0,97,5"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Password -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Password:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,5"/>
                <PasswordBox x:Name="PasswordBoxControl"
                             Grid.Row="1" Grid.Column="1"
                             Margin="67,0,97,5"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Branch + Login -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Branch:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,5"/>
                <ComboBox Grid.Row="2" Grid.Column="1"
                          Margin="67,0,97,5"
                          ItemsSource="{Binding Branches}"
                          SelectedItem="{Binding SelectedBranch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding IsBranchEnabled}"/>

                <!-- Status -->
                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                           Margin="0,10,0,0"
                           Foreground="Red"
                           Text="{Binding Message}"/>
                <Button Grid.Row="3" Grid.Column="1"
                    Margin="233,10,39,0"
                    Padding="15,5"
                    Content="Login"
                    Click="LoginButton_Click" Height="29" VerticalAlignment="Top" Grid.RowSpan="2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
